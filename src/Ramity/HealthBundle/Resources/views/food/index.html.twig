{% extends 'base.html.twig' %}

{% block body %}
    <h1>Foods list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Brand</th>
                <th>Description</th>
                <th>Servingsize</th>
                <th>Servingpercontainer</th>
                <th>Calories</th>
                <th>Totalfat</th>
                <th>Saturatedfat</th>
                <th>Polyunsaturatedfat</th>
                <th>Monounsaturatedfat</th>
                <th>Transfat</th>
                <th>Cholesterol</th>
                <th>Sodium</th>
                <th>Potassium</th>
                <th>Totalcarbs</th>
                <th>Dietaryfiber</th>
                <th>Sugars</th>
                <th>Protein</th>
                <th>Vitamina</th>
                <th>Vitaminc</th>
                <th>Calcium</th>
                <th>Iron</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr>
                <td><a href="{{ path('food_show', { 'id': food.id }) }}">{{ food.id }}</a></td>
                <td>{{ food.name }}</td>
                <td>{{ food.brand }}</td>
                <td>{{ food.description }}</td>
                <td>{{ food.servingSize }}</td>
                <td>{{ food.servingPerContainer }}</td>
                <td>{{ food.calories }}</td>
                <td>{{ food.totalFat }}</td>
                <td>{{ food.saturatedFat }}</td>
                <td>{{ food.polyunsaturatedFat }}</td>
                <td>{{ food.monounsaturatedFat }}</td>
                <td>{{ food.transFat }}</td>
                <td>{{ food.cholesterol }}</td>
                <td>{{ food.sodium }}</td>
                <td>{{ food.potassium }}</td>
                <td>{{ food.totalCarbs }}</td>
                <td>{{ food.dietaryFiber }}</td>
                <td>{{ food.sugars }}</td>
                <td>{{ food.protein }}</td>
                <td>{{ food.vitaminA }}</td>
                <td>{{ food.vitaminC }}</td>
                <td>{{ food.calcium }}</td>
                <td>{{ food.iron }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('food_show', { 'id': food.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('food_edit', { 'id': food.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('food_new') }}">Create a new food</a>
        </li>
    </ul>
{% endblock %}
